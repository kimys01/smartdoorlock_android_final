<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <!-- 상단 배경 (그라데이션) -->
    <View
        android:id="@+id/viewHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/gradient_actionbar_background_reverse"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="My Home"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="스마트 도어락 제어"
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvDashboardTitle"
        app:layout_constraintTop_toBottomOf="@id/tvDashboardTitle" />

    <!-- 메인 상태 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewStatus"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvDashboardTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 상태 아이콘 (원형 배경) -->
            <View
                android:id="@+id/viewStatusIndicator"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_status_circle"
                app:layout_constraintBottom_toTopOf="@id/txtStatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <ImageView
                android:id="@+id/imgStatusIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_lock_custom"
                app:tint="#9E9E9E"
                app:layout_constraintTop_toTopOf="@id/viewStatusIndicator"
                app:layout_constraintBottom_toBottomOf="@id/viewStatusIndicator"
                app:layout_constraintStart_toStartOf="@id/viewStatusIndicator"
                app:layout_constraintEnd_toEndOf="@id/viewStatusIndicator"/>

            <!-- 상태 텍스트 -->
            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="연결 대기 중..."
                android:textColor="#374151"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewStatusIndicator" />

            <!-- 마지막 업데이트 시간 (옵션) -->
            <TextView
                android:id="@+id/txtLastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="-"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtStatus" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- 컨트롤 버튼 영역 (Grid 형태) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewStatus">

        <!-- 문 열기/잠그기 버튼 (CardView로 버튼 구현) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnUnlock"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgUnlockBtnIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:tint="#2196F3" />

                <TextView
                    android:id="@+id/tvUnlockLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문 제어"
                    android:textColor="#374151"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="탭하여 실행"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 새 기기 등록 버튼 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnAddDevice"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="12dp"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="#7C3AED"/> <!-- 보라색 포인트 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기기 추가"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#374151"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="새 도어락 연결"
                    android:textSize="12sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>