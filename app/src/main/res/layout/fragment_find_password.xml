<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <!-- 상단 그라데이션 헤더 -->
    <View
        android:id="@+id/viewHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/gradient_actionbar_background_reverse"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 뒤로가기 버튼 -->
    <!-- 주의: FindPasswordFragment.kt 코드에서 binding.btnBack.setOnClickListener { findNavController().navigateUp() } 를 추가해야 동작합니다. -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        app:tint="#FFFFFF"
        android:contentDescription="뒤로가기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 헤더 타이틀 -->

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="112dp"
        android:text="비밀번호 찾기"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/viewHeaderBackground"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="가입 정보를 입력해 주세요"
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvHeaderTitle"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle" />

    <!-- 메인 컨텐츠 (스크롤 가능) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/viewHeaderBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- 입력 폼 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="60dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:lineSpacingExtra="4dp"
                        android:text="가입 시 등록한 아이디와 휴대폰 번호를 입력하시면 문자로 비밀번호를 전송해 드립니다."
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <!-- 아이디 입력 -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="아이디"
                        android:textColorHint="#9CA3AF"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#2196F3"
                        app:hintTextColor="#2196F3"
                        app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                        app:startIconTint="#9CA3AF">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFindId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="#1F2937" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 휴대폰 번호 입력 -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:hint="휴대폰 번호 (- 없이 입력)"
                        android:textColorHint="#9CA3AF"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="#2196F3"
                        app:hintTextColor="#2196F3"
                        app:startIconDrawable="@android:drawable/ic_menu_call"
                        app:startIconTint="#9CA3AF">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFindPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:textColor="#1F2937" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 전송 버튼 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSendPassword"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/gradient_button_background"
                        android:elevation="2dp"
                        android:stateListAnimator="@null"
                        android:text="비밀번호 전송 (SMS)"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>