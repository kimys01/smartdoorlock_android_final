<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 눌렸을 때 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/web_gradient_start"
                android:endColor="@color/web_gradient_end"
                android:angle="45"
                android:type="linear" />

            <!-- 뭉툭한 모서리 -->
            <cornersrners android:radius="10dp" />

            <!-- 오른쪽·아래쪽만 두껍고 살짝 어두운 테두리 -->
            <stroke
                android:width="2dp"
                android:color="#33000000" /> <!-- 기존 색보다 살짝 어두운 색 추천 -->

            <!-- 살짝 내려간 느낌 패딩 -->
            <padding
                android:left="14dp"
                android:top="10dp"
                android:right="16dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/web_gradient_start"
                android:endColor="@color/web_gradient_end"
                android:angle="45"
                android:type="linear" />

            <corners android:radius="12dp" />

            <!-- 오른쪽·아래쪽 면이 진하게 보이는 효과 (stroke는 전체지만 입체 효과) -->
            <stroke
                android:width="2dp"
                android:color="#33000000" />

            <!-- 기본은 위로 살짝 올라온 느낌 -->
            <padding
                android:left="16dp"
                android:top="6dp"
                android:right="14dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
