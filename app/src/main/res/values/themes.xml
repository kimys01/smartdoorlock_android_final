<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  Base application theme.  -->
    <style name="Theme.Smartdoorlock" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!--
          [수정]
          colorPrimary: 타이틀 바(ActionBar) 색상. 그라데이션 시작 색(#71B7E6)으로 설정.
          colorPrimaryVariant: 상태 표시줄(Status Bar) 색상. 그라데이션 종료 색(#9B59B6)으로 설정.
        -->
        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/web_gradient_start</item>
        <item name="colorPrimaryVariant">@color/web_gradient_end</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--  Status bar color.  -->
        <!--  [수정] ?attr/colorPrimaryVariant를 사용해 colorPrimaryVariant 값(@color/web_gradient_end)을 참조합니다.  -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!--  Customize your theme here.  -->
    </style>
</resources>